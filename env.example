# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/vokabdb
DATABASE_USERNAME=vokab_user
DATABASE_PASSWORD=your_password
DATABASE_DRIVER=org.postgresql.Driver
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-change-in-production-make-it-long-and-secure
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000
# JWT RSA Keys - Paths for persistent key storage (ensures users stay logged in after server restart)
# Keys are automatically generated and saved on first startup if they don't exist
# IMPORTANT: Back up these keys in production! If lost, all tokens will be invalidated.
JWT_PRIVATE_KEY_PATH=./keys/jwt-private-key.pem
JWT_PUBLIC_KEY_PATH=./keys/jwt-public-key.pem

# Firebase Configuration
# Required for Google Sign-In and push notifications
# Get your Firebase project ID from: https://console.firebase.google.com/ → Project Settings
# IMPORTANT: This is public information (visible in Firebase SDK config), safe to commit
FIREBASE_PROJECT_ID=your-firebase-project-id

# Optional: Service account for push notifications (not required for basic auth)
# Get service account from: https://console.firebase.google.com/ → Project Settings → Service Accounts
# Download the JSON file and set the absolute path here
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/your-project-firebase-adminsdk-xxxxx.json

# OpenRouter AI API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# RevenueCat Configuration
REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret
REVENUECAT_API_KEY=your-revenuecat-api-key

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,https://yourdomain.com

# Server Configuration
PORT=8080

# Feature Flags (Control which features are enabled)
PREMIUM_FEATURES_ENABLED=true
AI_IMAGE_EXTRACTION_ENABLED=true
AI_DAILY_INSIGHT_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
SUBSCRIPTIONS_ENABLED=true
FREE_AI_EXTRACTION_LIMIT=10

# Security Configuration
# Comma-separated list of test emails that bypass the user.active check
# Only set this in development/staging environments
# Example: TEST_EMAILS=test1@example.com,test2@example.com
TEST_EMAILS=

# GitHub API Configuration
# GitHub personal access token for accessing the vocabulary collections repository
# This increases the rate limit from 60/hour (unauthenticated) to 5000/hour (authenticated)
# Generate a token at: https://github.com/settings/tokens
# Required permissions: public_repo (or just public read access to the repository)
# Example: GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_TOKEN=

